#!/usr/bin/env bash

# bash completion
function completion() {
  local action="$1"
  local subact=( "${@:2}" )

  if [ "$action" = env ] && [ "${#subact[@]}" = 1 ]; then
    compgen -W "$(ls "${GITROOT}/core/settings}")" -- "$subact"
  fi
}

# display help
function help() {
  case $1 in
    up)
      echo "start a local dev environment"
      ;;
    *)
      echo "  $RUNNAME env"
      ;;
  esac
}

# show environment
function environment() {
  servesettings "${1}"

  echo "${RUNNAME^} Environment: $(readlink "${RUNCORE}/.settings" | sed -e 's/^.*\///')"
}

# run something
case "$1" in
  $'\t') completion "${@:2}";;
  help) help "${@:2}";;
  env) environment "${@:2}";;
esac
