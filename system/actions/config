#!/usr/bin/env bash

# bash completion
function completion() {
  local action="$1"
  local subact=( "${@:2}" )

  if [ "$action" = config ] && [ -z "$subact" ]; then
    compgen -W "$(ls "${GITROOT}/core/config")" -- "$subact"
  fi
}

# display help
function help() {
  case $1 in
    config)
      echo "start a local dev environment"
      ;;
    *)
      echo "  $RUNNAME config"
      ;;
  esac
}

# config settings
function config() {
  local config="${GITROOT}/core/config/${1}"
  local action="${@:2}"

  [ ! -f "$config" ] && echo "Not a valid config." && return

  if [ -n "$action" ]; then
    [[ ! "$action" =~ ^[+-]([^:]+:?)+$ ]] && echo "Invalid action." && return

    echo "$action" >> "$config"

    # run dataload
    runexec postgres pg_dataload "$config";
  fi

  cat "$config"
}

# run something
case "$1" in
  $'\t') completion "${@:2}";;
  help) help "${@:2}";;
  config) config "${@:2}";;
esac
